<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="20.0sp"
        android:textStyle="bold"
        android:textColor="@color/listTextcolor"
        android:id="@+id/mylistpName"
        android:paddingLeft="20.0dip"
        android:paddingTop="4.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />
    <TextView android:textSize="10.0sp"
        android:textColor="@color/listTextcolor"
        android:ellipsize="end"
        android:id="@+id/mylistprice"
        android:paddingLeft="20.0dip"
        android:paddingTop="4.0dip"
        android:paddingRight="40.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="true"
        android:layout_below="@+id/mylistpName" />
    <Button
        android:layout_gravity="right"
        android:id="@+id/mylistMoreButton"
        android:paddingRight="50.0dip"
        android:background="@mipmap/ic_more_horizontal"
        android:alpha="0.8"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_alignParentRight="true" />
    <TextView
        android:textColor="@color/listTextcolor"
        android:id="@+id/mylistquantity"
        android:paddingTop="7.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_toRightOf="@+id/mylistpName"
        android:layout_alignParentTop="true" />
</RelativeLayout>