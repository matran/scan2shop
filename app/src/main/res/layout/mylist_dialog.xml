<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:paddingLeft="20.0dip"
    android:paddingRight="40.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText android:id="@+id/mylistName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:text="@string/quantity" />
        <EditText android:id="@+id/quantityEditText"
            android:layout_width="50.0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:inputType="number" />
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:text="@string/unitprice" />
        <EditText
            android:id="@+id/editTextUnitPrice"
            android:layout_width="50.0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:inputType="number" />
    </RelativeLayout>
    <Button android:textColor="@android:color/white"
        android:id="@+id/myListDeleteButton"
        android:background="@drawable/add_to_cart_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="Delete" />
</LinearLayout>